<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:theme="@style/Theme.Zeit">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="348dp"
        android:text="@string/timer_deafault_text"
        android:textColor="@color/colorTextPrimary"
        android:textSize="90sp"
        app:backgroundTint="@color/colorSurface"
        app:cornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"       app:rippleColor="@color/colorPrimaryVariant" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/resetBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="500dp"
        android:textSize="90sp"
        app:backgroundTint="@color/colorSurface"
        app:cornerRadius="16dp"
        app:iconPadding="0dp"
        app:iconGravity="textStart"
        app:icon="@drawable/baseline_refresh_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/colorPrimaryVariant"/>

</androidx.constraintlayout.widget.ConstraintLayout>